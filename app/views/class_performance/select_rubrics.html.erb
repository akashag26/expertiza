<h1> Class Performance Rubric</h1>
<h4> Select any number of rubric criterias from the following </h4>

<%= form_for :class_performance , :url => { :controller => "class_performance_controller", :action =>"show_class_performance" } do |f| %>
  <%= f.select :criterias, options_for_select(@results.map { |obj| obj['txt'] }), { :prompt => "Select Criteria"}, { :multiple => true, :size => 5 } %>
  <%= f.submit "Show Performance" %>
<% end %>
